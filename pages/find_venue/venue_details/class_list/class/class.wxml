<!--pages/find_venue/venue_details/class.wxml-->
<view style="width:100%;height:603px;background:RGB(32,35,44)">
	<view class="poster" style="width:100%;height:160px">
		<image src="{{web_mainData.img[0].url}}" style="width:100%;height:160px"></image>
	</view>

	<view style="width:100%;height:70px;background:#171A21">
		<view style="width:90%;height:70px;display:flex;margin:0 auto">
			<view style="width:80%;font-size:20px;line-height:70px;color:#fff;">{{web_mainData.title}}</view>	
		</view>
	</view>

	<view style="width:100%;background:#171A21;margin-top:10px">
		<view style="width:100%;height:60px;display:flex;justify-content:center">
			<view style="width:20px;height:30px;border-bottom:3px solid #09C585"></view>
			<view style="height:60px;text-align:center;color:#09C585;line-height:60px;font-size:18px">课程介绍</view>
			<view style="width:20px;height:30px;border-bottom:3px solid #09C585"></view>
		</view>
		<view style="width:93.4%;overflow:hidden;font-size:14px;color:#fff;margin:0 auto">{{web_mainData.content[0].nodes[0].text}}</view>
	</view>
</view>

