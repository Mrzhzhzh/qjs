<!--pages/mine/news.wxml-->
<block wx:for="{{web_mainData}}" wx:key="id">
<view style="width:100%;border-bottom:1px solid #e5e5e5">
	<view style="width:93.4%;height:70px;display:flex;align-items:center;margin:0 auto">
			<view style="width:5px;height:5px;background:#09C585;border-radius:50%;line-height:45px;margin-right:10px"></view>
			<view style="width:60%;font-size:16px;">来自{{item.menu.name}}</view>
			<view style="font-size:12px;color:#bbbbbb">{{item.create_time}}</view>
	</view>

	<view style="width:93.4%;height:70px;font-size:14px;color:#bbbbbb;margin:0 auto;text-align:rignt">{{item.description}}</view>
</view>
</block>


