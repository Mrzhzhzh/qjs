<!--logs.wxml-->
<view class="poster" style="width:100%;height:200px;position:relative">
	<image src="/images/food_b.png" style="width:100%;height:200px"></image>
	<view style="width:100%;height:200px;position:absolute;top:0;left:0;background:black;opacity:0.3;z-index=1"></view>
	<span style="position:absolute;font-size:30px;color:#fff;top:17.5%;left:26%">为您提供商家</span>
	<span style="position:absolute;font-size:20px;color:#fff;top:39.5%;left:16.8%">Provide you with business</span>
	<span style="position:absolute;font-size:12px;color:#fff;top:58%;left:9.9%">Avoid unhealthy foods such as hamburger and chips</span>
</view>


<view style="width:100%;display:flex;padding-top:3%">
	<block wx:for="{{web_mainData}}" wx:key="id">
		<view style="width:46%;height:240px;border:1px solid #dddddd;text-align:center;border-radius:6px;margin:0 2%" data-path="/pages/food/food_list/food_list?id={{item.merchant_id}}"  bindtap="intoPath">
			<image src="{{item.mainImg[0].url}}" style="width:160px;height:126px;display:inline-block;margin-top:5px;border-radius:6px"></image>
			<view style="margin-top:12px">
				<span style="font-size:18p">{{item.name}}</span>
			</view>
			<view style="margin-top:3px">
				<span style="font-size:14px;color:red">{{item.description}}</span>
			</view>
			<view style="width:70px;height:30px;background:#09C585;border-radius:4px;font-size:14px;color:#fff;line-height:30px;display:inline-block;margin-top:3px">查看</view>
		</view>
	</block>
</view>

