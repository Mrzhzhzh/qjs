/* pages/food/food_list.wxss */
.goods_menu{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}
.menu_text{
  width: 33.3%;
  float: left;
  font-size: 32rpx;
  color: #444;
   position: relative; 
}
.menu_text.active{
  color: #48db71;
}
.menu_text image{
  width: 25rpx;
  height: 14rpx;
  margin-left: 20rpx;
}
.shop_numb{
  float: right;
  display: flex;
  align-items: center;
}
.shop_numb image{
  width: 46rpx;
  height: 46rpx;
}
.shop_numb input{
  width: 50rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #2e2e2e;
  background: 0;
  border: 0;
  text-align: center;
}
.c-state1{

   display:block;
   
   width:100%;height:auto;background:#2e2e2e;position:fixed; bottom:100rpx;opacity: 0;
   transition: all .5s ease-in .1s;
   transform: translateY(200px);
   
 }  

 .c-state2{

   transform: translateY(0px);
   opacity: 0.8;
   
 }  




